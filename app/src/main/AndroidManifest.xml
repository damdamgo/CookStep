<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="damdam.cookstep">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".CookStep"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/NoActionBar">
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".menu.MainCategoriesActivity"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".menu.SubCategoriesActivity"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".userManage.ConnectionActivity"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".menu.ShowRecipeFromCategory"
            android:theme="@style/AppTheme"></activity>
        <activity android:name=".StepView.RecipeActivity"> </activity>
    </application>

</manifest>